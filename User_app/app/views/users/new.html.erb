<% content_for :left_column do %>
<style>
input{
	display: block;
	margin-bottom: 18px;
	height: 20px;
}
</style>


<h1>New Users</h1>
<form action="/users" method="post">
	  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
	  <label>First name<input type="text" name="user[first_name]" placeholder="First name"></label>
		<label>Last name<input type="text" name="user[last_name]" placeholder="Last name"></label>
	  <label>Email<input type="text" name="user[email]" placeholder="Email address"></label>
	  <label>Password<input type="password" name="user[password]" placeholder="Password"></label>
	  <input type="submit" value="Create User">
</form>
<% end %>

<% content_for :right_column do %>

	<% if flash[:errors] != nil %>
	<%  flash[:errors].each do |error| %>
		<p><%= error %></p>
		<% end %>
 <% end %>

<% end %>
